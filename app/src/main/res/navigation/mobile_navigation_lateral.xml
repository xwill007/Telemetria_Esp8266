<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_listFragment">


    <fragment
        android:id="@+id/nav_agregarEquipoFragment"
        android:name="com.willvargas.telemetria_esp8266.ui.AgregarEquipoFragment"
        android:label="@string/add_device" />
    <fragment
        android:id="@+id/nav_borrarEquipoFragment"
        android:name="com.willvargas.telemetria_esp8266.ui.BorrarEquipoFragment"
        android:label="@string/delete_device" />
    <fragment
        android:id="@+id/nav_listFragment"
        android:name="com.willvargas.telemetria_esp8266.ui.list.ListFragment"
        android:label="@string/device_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_nav_listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />

        <argument
            android:name="equipo"
            app:argType="com.willvargas.telemetria_esp8266.data.server.EquiposServer" />
        <action
            android:id="@+id/action_nav_listFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.willvargas.telemetria_esp8266.ui.list.DetailFragment"
        android:label="@string/info_Equip"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="equipo"
            app:argType="com.willvargas.telemetria_esp8266.data.server.EquiposServer" />
        <action
            android:id="@+id/action_detailFragment_to_dispensacionesListFragment"
            app:destination="@id/dispensacionesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/dispensacionesListFragment"
        android:name="com.willvargas.telemetria_esp8266.ui.list.DispensacionesListFragment"
        android:label="fragment_dispensaciones_list"
        tools:layout="@layout/fragment_dispensaciones_list" >
        <argument
            android:name="idEquipo"
            app:argType="string"
            android:defaultValue="xxx"
            />
        <argument
            android:name="equipo"
            app:argType="com.willvargas.telemetria_esp8266.data.server.EquiposServer"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.willvargas.telemetria_esp8266.ui.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" >
        <argument
            android:name="equipo"
            app:argType="com.willvargas.telemetria_esp8266.data.server.EquiposServer" />
    </fragment>


</navigation>